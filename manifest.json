{
  "manifest_version": 2,
  "name": "Shocklogic Help Desk Extension",
  "description": "This extension shows the latest Help Desk Tickets.",
  "version": "0.2",
  "author": "Federico Giust",
    "options_page": "options.html",
  "permissions": [
    "storage",
    "contentSettings",
    "http://devslhd/"
  ],
  "icons": { "16": "images/icon_16.png",
           "48": "images/icon_48.png",
          "128": "images/icon_128.png" },
  "browser_action": {
    "default_title": "Shocklogic Help Desk Extension",
    "default_icon": "images/icon_48.png",
    "default_popup": "main.html"
  }
}